{% extends ':layout:admin.html.twig' %}

{% block content_title %}Les équipes{% endblock %}

{% block pageWrapper %}

    <div class="panel panel-default">
        <h2>Liste des équipes</h2>
        <div class="dataTable_wrapper gen-table">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Nom</th>
                    <th>Descriptions</th>
                    <th>Nombre de membres</th>
                    <th>Active</th>
                    <th>
                        {#<a href="{{ path('user_new')}}" class="btn btn-social btn-adn btn-bg" title="Ajouter lun utilisateur">#}
                            {#<i class="fa fa-plus "></i>Ajouter#}
                        {#</a>#}
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for team in teams %}
                    <tr>
                        <td><a href="{{ path('_admin_team_show', { 'id': team.id }) }}">{{ team.id }}</a></td>
                        <td class="top-left">{{ team.teamname }}</td>
                        <td class="top-left">{{ team.descriptions }}</td>
                        <td>{{ team.members.count }}</td>
                        <td>{% if (team.enabled == true) %}<i class="fa-2x icon-check is-enabled"></i>{% else %} &nbsp;{% endif%}</td>
                        <td>
                            <ul class="table-action">
                                <li>
                                    {#<a href="{{ path('user_show', { 'id': entity.id }) }}" class="btn btn-block btn-social-icon btn-github" title="Visualiser l'utilisateur">#}
                                        <a href="#">
                                            <i class="fa-lg icon-edit edit-action"></i>&nbsp;
                                        </a>
                                    {#</a>#}
                                </li>
                                <li>
                                    {#<a href="{{ path('user_edit', { 'id': entity.id }) }}" class="btn btn-block btn-social-icon btn-dropbox" title="Modifier l'utilisateur">#}
                                        {#<i class="fa fa-edit"></i>#}
                                    {#</a>#}
                                    <a href="#" class="">
                                        <i class="fa-lg icon-delete delete-action"></i>&nbsp;
                                    </a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <ul>
        <li class="list-unstyled">
            <a href="" class="btn btn-social btn-reddit btn-bg" title="Ajouter une équipe">
                <i class="fa fa-plus "></i>Ajouter un nouvel utilisateur
            </a>
        </li>
    </ul>
{% endblock %}

